<div class="button" id="submitARating">
  Submit a rating
</div>
<!-- This is to rate the employer - job owner!!! -->
<!-- Including Template to show job_Ratings/review -->
  <div class="rating">
    <p>This job is complete - Please rate <%= link_to(@job.user.name, user_path(@job.user)) %></p>

    <%= form_for(@rating, :url => rate_job_path(@job.id), remote: true, format: :json) do |f| %>

      <p>
        <%= f.label :score %>
        <%= f.number_field :score, :min => 1, :max => 5, :required => true %>
      </p>
      <p>
        <%= f.label :body %>
        <%= f.text_field :body %>
        <% f.hidden_field :job_id %>
      </p>
      <p id="submit_job_rating">
        <%= f.submit "Submit" %>
      </p>
    <% end %>
  </div>
